color status red default

set from      = rsahae@teslamotors.com # from address
set signature = ~/.mutt/sig-tesla # my signature file

# Default inbox.
set spoolfile = "+rsahae.teslamotors.com/INBOX"

# Other special folders.
set mbox      = "+rsahae.teslamotors.com/Archive"
set postponed = "+rsahae.teslamotors.com/Drafts"
set record    = "+rsahae.teslamotors.com/Sent Items"

# BCC myself on emails
my_hdr Bcc: rsahae@teslamotors.com

# Mailboxes to show in the sidebar.
mailboxes '+rsahae.teslamotors.com/INBOX'                      \
          '+rsahae.teslamotors.com/Sent Items'                 \
          '+rsahae.teslamotors.com/Archive'                    \
          '+rsahae.teslamotors.com/Drafts'                     \
          '+rsahae.teslamotors.com/Drive Notes'                \
          '+rsahae.teslamotors.com/For Later'                  \
          '+rsahae.teslamotors.com/Code Review.Firmware'       \
          '+rsahae.teslamotors.com/Code Review.Jump Scripts'   \
          '+rsahae.teslamotors.com/Code Review.TheShire'       \
          '+rsahae.teslamotors.com/Code Review.Tidal'          \
          '+rsahae.teslamotors.com/FW Releases Info'           \
          '+rsahae.teslamotors.com/Issues.Jira'                \
          '+rsahae.teslamotors.com/Issues.Jira.Comments'       \
          '+rsahae.teslamotors.com/Issues.Jira.Created'        \
          '+rsahae.teslamotors.com/Misc.Eat Club'              \
          '+rsahae.teslamotors.com/Misc.Groceries'             \
          '+rsahae.teslamotors.com/Misc.PTO'                   \
          '+rsahae.teslamotors.com/Misc.Smoke It'              \
          '+rsahae.teslamotors.com/Misc.WAH'                   \
          '+rsahae.teslamotors.com/Platform Firmware Releases' \

# SMTP Settings
set sendmail      = "/usr/local/bin/msmtp -a tesla"

# Gmail-style keyboard shortcuts
bind editor <space> noop
macro index,pager git   "<change-folder>=rsahae.teslamotors.com/INBOX<enter>"                       "Go to inbox"
macro index,pager gst   "<change-folder>=rsahae.teslamotors.com/Sent Items<enter>"                  "Go to sent mail"
macro index,pager gat   "<change-folder>=rsahae.teslamotors.com/Archive<enter>"                     "Go to all mail"
macro index,pager gdt   "<change-folder>=rsahae.teslamotors.com/Drafts<enter>"                      "Go to drafts"
macro index,pager gdn   "<change-folder>=rsahae.teslamotors.com/Drive Notes<enter>"                 "Go to DriveNotes"
macro index,pager gfl   "<change-folder>=rsahae.teslamotors.com/For Later<enter>"                   "Go to For Later"
macro index,pager gcf   "<change-folder>=rsahae.teslamotors.com/Code Review.Firmware<enter>"        "Go to Code Review.Firmware"
macro index,pager gcj   "<change-folder>=rsahae.teslamotors.com/Code Review.Jump Scripts<enter>"    "Go to Code Review.Jump Scripts"
macro index,pager gcs   "<change-folder>=rsahae.teslamotors.com/Code Review.TheShire<enter>"        "Go to Code Review.TheShire"
macro index,pager gct   "<change-folder>=rsahae.teslamotors.com/Code Review.Tidal<enter>"           "Go to Code Review.Tidal"
macro index,pager gij   "<change-folder>=rsahae.teslamotors.com/Issues.Jira<enter>"                 "Go to Issues.Jira"
macro index,pager gjc   "<change-folder>=rsahae.teslamotors.com/Issues.Jira.Comments<enter>"        "Go to Issues.Jira.Comments"
macro index,pager gjn   "<change-folder>=rsahae.teslamotors.com/Issues.Jira.Created<enter>"         "Go to Issues.Jira.Created"
macro index,pager gme   "<change-folder>=rsahae.teslamotors.com/Misc.Eat Club<enter>"               "Go to Misc.Eat Club"
macro index,pager gmg   "<change-folder>=rsahae.teslamotors.com/Misc.Groceries<enter>"              "Go to Misc.Groceries"
macro index,pager gmp   "<change-folder>=rsahae.teslamotors.com/Misc.PTO<enter>"                    "Go to Misc.PTO"
macro index,pager gms   "<change-folder>=rsahae.teslamotors.com/Misc.Smoke It<enter>"               "Go to Misc.Smoke It"
macro index,pager gmw   "<change-folder>=rsahae.teslamotors.com/Misc.WAH<enter>"                    "Go to Misc.WAH"
macro index,pager gpf   "<change-folder>=rsahae.teslamotors.com/Platform Firmware Releases<enter>"  "Go to Platform Firmware Releases"
macro index,pager gfr   "<change-folder>=rsahae.teslamotors.com/FW Releases Info<enter>"            "Go to FW Releases Info"

# Set Delete to move mail to the Archive
macro index d "<clear-flag>!<previous-entry><clear-flag>N<previous-entry><save-message>=rsahae.teslamotors.com/Archive<enter>" "Archive message"
macro pager d "<clear-flag>!<clear-flag>N<save-message>=rsahae.teslamotors.com/Archive<enter>" "Archive message"

# Inbox specific copy/move dialogs
macro index,pager ,ci "<copy-message>=rsahae.teslamotors.com/INBOX<enter>" "copy a message to Inbox"
macro index,pager ,mi "<save-message>=rsahae.teslamotors.com/INBOX<enter>" "move a message to Inbox"

# Address Book To Mutt Integration -----------------------------------------------------
# set query_command = "~/.mutt/abtomutt '%s'"
set query_command = ""
bind index,pager A noop # Remove the binding for A set by muttrc-gmail

# Hook for switching sort type when switching to sent folder
folder-hook "+rsahae.teslamotors.com/*"           set sort=threads
folder-hook "+rsahae.teslamotors.com/Sent Items"  set sort=reverse-date
