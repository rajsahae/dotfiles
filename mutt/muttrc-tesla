color status red default

set from      = rsahae@teslamotors.com # from address
set signature = ~/.mutt/sig-tesla # my signature file

# Default inbox.
set spoolfile = "+rsahae.teslamotors.com/INBOX"

# Other special folders.
set mbox      = "+rsahae.teslamotors.com/Archive"
set postponed = "+rsahae.teslamotors.com/Drafts"
set record    = "+rsahae.teslamotors.com/Sent Items"

# Mailboxes to show in the sidebar.
mailboxes '+rsahae.teslamotors.com/INBOX'                      \
          '+rsahae.teslamotors.com/Sent Items'                 \
          '+rsahae.teslamotors.com/Archive'                    \
          '+rsahae.teslamotors.com/Drafts'                     \
          '+rsahae.teslamotors.com/Drive Notes'                \
          '+rsahae.teslamotors.com/For Later'                  \
          '+rsahae.teslamotors.com/Code Review'                \
          '+rsahae.teslamotors.com/Code Review.Firmware'       \
          '+rsahae.teslamotors.com/Code Review.Jump Scripts'   \
          '+rsahae.teslamotors.com/Code Review.TheShire'       \
          '+rsahae.teslamotors.com/Code Review.Tidal'          \
          '+rsahae.teslamotors.com/FW Releases Info'           \
          '+rsahae.teslamotors.com/Issues'                     \
          '+rsahae.teslamotors.com/Issues.Jira'                \
          '+rsahae.teslamotors.com/Issues.Jira.Comments'       \
          '+rsahae.teslamotors.com/Issues.Jira.Created'        \
          '+rsahae.teslamotors.com/Misc'                       \
          '+rsahae.teslamotors.com/Misc.Eat Club'              \
          '+rsahae.teslamotors.com/Misc.Groceries'             \
          '+rsahae.teslamotors.com/Misc.PTO'                   \
          '+rsahae.teslamotors.com/Misc.Smoke It'              \
          '+rsahae.teslamotors.com/Misc.WAH'                   \
          '+rsahae.teslamotors.com/Platform Firmware Releases' \

# SMTP Settings
set sendmail      = "/usr/local/bin/msmtp -a tesla"

# Gmail-style keyboard shortcuts
bind editor <space> noop
macro index,pager git "<change-folder>=rsahae.teslamotors.com/INBOX<enter>" "Go to inbox"
macro index,pager gst "<change-folder>=rsahae.teslamotors.com/Sent Items<enter>" "Go to sent mail"
macro index,pager gat "<change-folder>=rsahae.teslamotors.com/Archive<enter>" "Go to all mail"
macro index,pager gdt "<change-folder>=rsahae.teslamotors.com/Drafts<enter>" "Go to drafts"

# Set Delete to move mail to the Archive
macro index,pager d "<clear-flag>*<previous-entry><save-message>=rsahae.teslamotors.com/Archive<enter>" "Archive message"
