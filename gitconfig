[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
  status = auto

[merge]
  tool = vimdiff

[credential]
  helper = cache --timeout=3600

[alias]
  co = checkout
  st = status
  br = branch
  cm = commit
  sb = status --short --branch
  di = diff
  dc = diff --cached
  lo = log --oneline
  where = tag -l '*release*' --contains
  create-pull-request = !sh -c 'stash pull-request $0'
  diff-master = !git diff $(git merge-base HEAD origin/master)
  diff-stat-master = !git diff --stat $(git merge-base HEAD origin/master)

[push]
  default = current

[core]
  autocrlf = input
  editor = vim
  preloadindex = true

[apply]
	whitespace = fix

[pull]
  default = current
