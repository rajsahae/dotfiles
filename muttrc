# Paths ------------------------------------------------------------------------
set folder            = ~/.mail                    # mailbox location
set alias_file        = ~/.mutt/aliases            # where to store aliases
set header_cache      = ~/.mutt/cache/headers      # where to store headers
set message_cachedir  = ~/.mutt/cache/bodies       # where to store bodies
set certificate_file  = ~/.mutt/certificates       # where to store certificates
set mailcap_path      = ~/.mutt/mailcap            # entries for filetypes
set tmpdir            = ~/.mutt/temp               # where to keep temp files


# Basic Options ----------------------------------------------------------------
set mbox_type  = Maildir # mailbox type
set wait_key   = no      # shut up, mutt
set timeout    = 0       # idle time before scanning
set mail_check = 5       # minimum time between scans
set delete               # don't ask, just do
set quit                 # don't ask, just do!!
set beep_new             # bell on new mails
set pipe_decode          # strip headers and eval mimes when piping
set thorough_search      # strip headers and eval mimes before searching
unset confirmappend      # don't ask, just do!
unset mark_old           # read/new is good enough for me
unset move               # gmail does that


# Sidebar Patch --------------------------------------
set sidebar_delim   = '  │'
set sidebar_visible = yes
set sidebar_width   = 35

color sidebar_new color221 color233

macro index b '<enter-command>toggle sidebar_visible<enter><refresh>'
macro pager b '<enter-command>toggle sidebar_visible<enter><redraw-screen>'

mailboxes +temporary/search


# Status Bar -----------------------------------------
set status_chars  = " *%A"
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"


# Header Options -------------------------------------
ignore *                                # ignore all headers
unignore from: to: cc: date: subject:   # show only these
unhdr_order *                           # some distros order things by default
hdr_order from: to: cc: date: subject:  # and in this order

# Index View Options ---------------------------------
set date_format = "%m/%d/%Y %H:%M:%S"
set index_format = "[%Z]  %D  %-20.20F  %s"
set sort = threads                         # like gmail
set sort_aux = reverse-last-date-received  # like gmail
set uncollapse_jump                        # don't collapse on an unread message
set sort_re                                # thread based on regex
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"


# Key Bindings ---------------------------------
bind index R        group-reply
bind index <tab>    sync-mailbox

# Shortcut for search folder
macro index g/ "<change-folder>=temporary/search<enter>" "Go to search folder"

# Vim style keyboard shortcuts
bind index gg       first-entry
bind index G        last-entry

# Ctrl-R to mark all as read
macro index ,r "<limit>~N<enter><tag-pattern>~U<enter><tag-prefix><clear-flag>N<untag-pattern>.<enter><limit>all<enter>" "mark all messages as read"
macro index ,n "<limit>~N<enter>" "show new messages"
macro generic ,s "<enter-command>source ~/.muttrc<enter>"

# Saner copy/move dialogs
macro index,pager C "<copy-message>?<toggle-mailboxes>" "copy a message to a mailbox"
macro index,pager M "<save-message>?<toggle-mailboxes>" "move a message to a mailbox"

# Macro 'a' to limit all for easy un-limiting
macro index a "<limit>all<enter>" "show all messages (undo limit)"

# w3m macro for viewing links in text pager
macro index,pager \Cw ": set pipe_decode\n|w3m\n: unset pipe_decode\n" "call w3m to extract URLs out of a message"

# notmuch macro
macro index S "<enter-command>unset wait_key<enter><shell-escape>~/.mutt/mutt-notmuch-py ~/.mail/temporary/search<enter><change-folder-readonly>+temporary/search<enter>" "search mail (using notmuch)"


# Sidebar Navigation ---------------------------------
bind index,pager <down>   sidebar-next
bind index,pager <up>     sidebar-prev
bind index,pager <right>  sidebar-open


# Pager View Options ---------------------------------
set pager_index_lines = 10 # number of index lines to show
set pager_context = 3      # number of context lines to show
set pager_stop             # don't go to next message automatically
set menu_scroll            # scroll in menus
set tilde                  # show tildes like in vim
unset markers              # no ugly plus signs
bind index,pager N search-opposite # Shift-N for reverse search, like Vim
set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"


# Pager Key Bindings ---------------------------------
bind pager k  previous-line
bind pager j  next-line
bind pager gg top
bind pager G  bottom
bind pager R  group-reply
macro pager <tab> <sync-mailbox>


# Postpone/Recall Bindings -----------------------------
bind compose p postpone-message
bind index p recall-message

# View attachments properly.
bind attach <return> view-mailcap


# Compose View Options -------------------------------
set editor = "vim"                   # Use terminal Vim to compose email.
set realname = "Raj Sahae"           # who am i?
set sig_dashes                       # dashes before sig
set fast_reply                       # skip to compose when replying
set askcc                            # ask for CC:
set fcc_attach                       # save attachments with the body
set forward_format = "Fwd: %s"       # format of subject when forwarding
set forward_decode                   # decode when forwarding
set attribution = "On %d, %n wrote:" # format of quoting header
set reply_to                         # reply to Reply to: field
set reverse_name                     # reply as whomever it was to
set include                          # include message in replies
set forward_quote                    # include message in forwards
unset edit_headers                     # show headers when composing
unset mime_forward                   # forward attachments as part of body


# SMTP Settings
set sendmail_wait = -1               # send mail in the background


# Viewing HTML Email --------------------------------------
auto_view text/html                                  # view html automatically
alternative_order text/plain text/enriched text/html # save html for last
set reverse_alias = yes                              # Show alias names


# Hook for switching to folders each account ------------------------------
folder-hook rajsahae.gmail.com/*     source ~/.mutt/muttrc-gmail
folder-hook rsahae.teslamotors.com/* source ~/.mutt/muttrc-tesla


# Macros to switch accounts manually -------------------------------------
macro index <f2> '<sync-mailbox><enter-command>source ~/.mutt/muttrc-gmail<enter><change-folder>!<enter>'
macro index <f3> '<sync-mailbox><enter-command>source ~/.mutt/muttrc-tesla<enter><change-folder>!<enter>'


# Select gmail on startup
source ~/.mutt/muttrc-gmail # Then load this to be the default
source ~/.mutt/muttrc-tesla # Load this first to get the mailboxes

# Custom colors
color index red   white ~F
color index black green ~N
color index blue  white ~T
color index black red   ~D

color header cyan black 'Subject:'
color header yellow black 'From:'
color header magenta black 'Date:'
